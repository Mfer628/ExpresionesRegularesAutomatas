<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/img"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="serif-monospace"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="50dp" />



    <EditText
        android:id="@+id/txtpswd1"
        android:layout_width="400dp"
        android:background="@drawable/style_bordes_editext"
        android:textColorHint="@color/white"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:hint="@string/passwd"
        android:drawableLeft="@drawable/baseline_info_24"
        android:radius="80dp"
        android:inputType="textWebPassword"
        android:fontFamily="serif-monospace"
        android:imeOptions="actionNext" />
    <Button
        android:id="@+id/btnAceptar"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Aceptar"
        android:onClick="validarContraseÃ±a"
        app:cornerRadius="20dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/irTelefono"
        android:onClick="siguientebtn"/>


    <GridLayout
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ImageFacebook"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/face"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/ImageGoogle"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/go"
            android:background="@null"/>
    </GridLayout>

</LinearLayout>

